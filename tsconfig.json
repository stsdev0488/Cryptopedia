{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,

    "jsx": "react-native",

    "noEmit": true,

    "isolatedModules": true,

    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@screens/*": ["screens/*"],
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@typings/*": ["typings/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
